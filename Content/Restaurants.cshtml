}

    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
       
    <style>
        body {
            background: linear-gradient(to right, #e8f0ff, #fdfaf6);
            margin: 0;
            padding: 0;
            font-family: Gabriola;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        

        h1 {
            font-size: 2.5em;
            margin-top: 20px;
            font-family: Forte;
            color: black;
            text-align: center;
        }

        .hero-section {
            text-align: center;
            background-color: rgba(169, 169, 169, 0.2);
            padding: 20px;
          
            width: 100%;
            border-bottom: 2px solid #333;
            border-radius: 20px;
            font-size: 24px;

        }
        .container{
            background: rgba(255, 255, 255, 0.7); /* רקע לבן שקוף */
            justify-content: center; /* מרכז את הכרטיסיות */
            border-radius: 23px;
        }

        select {
            padding: 10px;
            font-size: 1em;
            border-radius: 5px;
        }

        

        .gallery-container {
            margin-bottom: 40px;
            
            position: relative;
            width: 100%;
            max-width: 1000px;
            display: flex;
            align-items: center;
            justify-content: center;
           
        }

        .arrow-btn {
            background-color: #333;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 20px;
            z-index: 10;
            margin: 0 15px;
        }

            .arrow-btn:hover {
                background-color: #555;
            }

        .gallery {
            overflow: hidden;
            width: 100%;
            height:100%
        }

        .gallery-title {
            font-family: Gabriola; /* בחר פונט שתרצה */
            font-size: 24px; /* גודל הפונט */
            font-weight: bold; /* בחירה של האם הפונט יהיה מודגש */
            margin-bottom: 15px; /* רווח בין הכותרת לשאר הגלריה */
           
        }

        .card-wrapper {
            display: flex;
            margin-top: 40px;
            margin-bottom: 40px;
            justify-content: center;
            align-items: center;
            transition: transform 0.6s ease;
        }

        .restaurant-card {
            width: 280px;
            flex-shrink: 0;
            margin: 0 15px;
            background: white;
            border-radius: 15px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            padding: 20px;
            box-sizing: border-box;
            text-align: center;
            transition: transform 0.6s ease, height 0.5s ease;
            transform: scale(0.9);
            opacity: 0.6;
        }

            .restaurant-card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
                border-radius: 10px;
            }

        .restaurant-name {
            font-size: 1.8em;
            margin-top: 10px;
            font-weight: bold;
        }

        .info-btn {
            background: linear-gradient(to right, #ff9966, #ff5e62);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 30px;
            font-weight: bold;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s ease;
            margin-top: 10px;
        }

        .restaurant-rating {
            font-size: 1em;
            
            margin-top: 5px;
            font-weight: bold;
        }
            .info-btn:hover {
                background: linear-gradient(to right, #e95b3e, #e03c3c);
            }

        .description {
            display: none;
            margin-top: 10px;
            font-size: 17px;
            padding: 10px;
            border-radius: 7px;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
        }

        .restaurant-card.expanded .description {
            display: block;
        }

        .restaurant-card.active {
            transform: scale(1.1);
            opacity: 1;
            z-index: 2;
        }

        .heart {
            position: absolute;
            top: 16px;
            left: 16px;
            font-size: 24px;
            cursor: pointer;
            transition: color 0.3s ease;
            color: #ccc;
        }

            .heart.filled {
                color: red;
            }

       

        .modal {
            position: fixed; /* המודל יוצג מעל כל התוכן */
          
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* רקע חצי שקוף */
            display: none; /* המודל מוסתר בהתחלה */
            justify-content: center;
            align-items: center;
            z-index: 9999; /* הצגת המודל לפני כל אלמנט אחר */
        }

        .modal-content {
            background-color: white; /* רקע לבן למודל */
            padding: 20px;
            border-radius: 8px;
            width: 300px; /* רוחב יותר קטן */
            text-align: center; /* מרכז את הטקסט */
        }

            .modal-content h2 {
                font-size: 18px; /* גודל טקסט קטן יותר */
                margin-bottom: 10px;
            }

            .modal-content button {
                padding: 10px;
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .modal-content button:hover {
                    background-color: #45a049;
                }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

        
    </style>
</head>

