@page
@model SignInModel
@{
    ViewData["Title"] = "Sign In";
}
@section FullWidthContent {
    <div class="container" style="background: rgba(255, 255, 255, 0.5); /* רקע שקוף עם צבע בהיר */
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
                                     justify-content: center;
                                     align-items: center;
                                     margin-top: 30px;
                                     max-width: 700px;
    width: 90%;
border-radius:23px;
                                     text-align: center;">
<div class="form-container">
    <h2>Sign In</h2>
    <form method="post">
        <div class="form-group">
            <label for="Username">Username:</label>
            <input type="text" id="Username" name="username" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div class="mb-3 form-text text-danger">
            @Model.msg
        </div>
        <button type="submit" class="btn-main">Sign In</button>
    </form>
            
</div>

<style>
    .form-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        margin: 20px auto;
        max-width: 500px;
        text-align: center;
    }

    .form-container h2 {
        font-size: 2.5em;
        margin-bottom: 20px;
            font-family: Forte;
    }

    .form-group {
        margin-bottom: 20px;
                font-family:'Bell MT';
    }

            label {
                display: block;
                font-size: 1.4em;
                margin-bottom: 10px;
                font-family: Gabriola;
            }
    

    .form-group input {
        width: 100%;
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-main {
        font-family: Gabriola;
        background: linear-gradient(to right, #ff9966, #ff5e62);
        color: white;
        padding: 15px 40px;
        text-decoration: none;
        border-radius: 50px;
        font-size: 1.8em;
        font-weight: bold;
        cursor: pointer;
        border: none;
        transition: all 0.4s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

        .btn-main:hover {
            background: linear-gradient(to right, #e95b3e, #e03c3c);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.3);
            transform: scale(1.05);
        }

    .form-control {
        font-family: 'Bell MT';
        font-size: 1.2em;
    }

            body {
                background: linear-gradient(to right, #ffe0c3, #ffb6b9);
            }
</style>
    </div>
}