    <script>
                                 let currentlyOpenCard = null;

        function toggleCard(card) {
          // אם לוחצים על אותו כרטיס – סגור אותו
          if (currentlyOpenCard === card) {
            card.classList.remove('revealed');  // סגור את כרטיס זה
            closeRecipeInCard(card);  // סגור את המתכון של הכרטיס הזה
            showImageInCard(card);  // הצג את התמונה של הכרטיס הזה
            currentlyOpenCard = null;  // לא מקשר לכרטיס פתוח
          } else {
            // סגור את הכרטיס הפתוח הנוכחי
            if (currentlyOpenCard) {
              currentlyOpenCard.classList.remove('revealed');  // סגור את הכרטיס הקודם
              closeRecipeInCard(currentlyOpenCard);  // סגור את המתכון של הכרטיס הקודם
              showImageInCard(currentlyOpenCard);  // הצג את התמונה של הכרטיס הקודם
            }

            // פתח את הכרטיס החדש
            card.classList.add('revealed');  // פתח את הכרטיס החדש
            hideImageInCard(card);  // הסתר את התמונה בכרטיס החדש
            currentlyOpenCard = card;  // שמור את הכרטיס הפתוח
          }
        }

        function toggleRecipe(event, button) {
          event.stopPropagation(); // מניעת סגירה של הכרטיס כאשר לוחצים על כפתור המתכון
          const recipe = button.nextElementSibling;  // המתכון נמצא אחרי הכפתור
          const isOpen = recipe.classList.contains('open');

          // סגור את כל המתכונים בכל הכרטיסים
          document.querySelectorAll('.full-recipe').forEach(r => r.classList.remove('open'));
          document.querySelectorAll('.recipe button').forEach(b => b.textContent = 'Recipe');

          // אם המתכון לא היה פתוח – פתח אותו
          if (!isOpen) {
            recipe.classList.add('open');
            button.textContent = 'Close';
          }
        }

        function closeRecipeInCard(card) {
          const recipe = card.querySelector('.full-recipe');
          const button = card.querySelector('button');
          if (recipe) recipe.classList.remove('open');
          if (button) button.textContent = 'Recipe';
        }

        function hideImageInCard(card) {
          const image = card.querySelector('.image');
          if (image) {
            image.classList.add('hidden');  // הוסף קלאס להסתיר את התמונה
          }
        }

        function showImageInCard(card) {
          const image = card.querySelector('.image');
          if (image) {
            image.classList.remove('hidden');  // הסר את הקלאס להציג את התמונה
          }
        }
    </script>

